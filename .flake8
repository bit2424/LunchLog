[flake8]
max-line-length = 88
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    migrations,
    node_modules,
    .tox,
    .eggs,
    *.egg,
    build,
    dist
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F401,  # imported but unused (handled by isort)
per-file-ignores =
    __init__.py:F401
    settings/*.py:E501,F405,F403
    */migrations/*.py:E501
